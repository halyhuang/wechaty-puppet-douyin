# Python 路径
python=/opt/homebrew/bin/python3
PYTHON=/opt/homebrew/bin/python3

# Node.js 配置（放在最前面，确保优先级）
node_version=16.20.2
npm_config_node_version=16.20.2
node_gyp_node_version=16.20.2
npm_config_target=16.20.2
npm_config_runtime=node
npm_config_disturl=https://npmmirror.com/mirrors/node
npm_config_target_arch=arm64
npm_config_target_libc=unknown
npm_config_target_platform=darwin

# node-gyp 配置
node-gyp-binary=/opt/homebrew/bin/node-gyp
npm_config_node_gyp=/opt/homebrew/bin/node-gyp
node-gyp=/opt/homebrew/bin/node-gyp
node-gyp-version=11.0.0
npm_config_node_gyp_version=11.0.0

# Electron 配置（移到后面，降低优先级）
electron_version=22.3.27
electron_mirror=https://npmmirror.com/mirrors/electron/
electron_builder_binaries_mirror=https://npmmirror.com/mirrors/electron-builder-binaries/
electron_custom_dir=22.3.27

# npm 镜像
registry=https://registry.npmmirror.com
disturl=https://npmmirror.com/mirrors/node

# 架构配置
npm_config_arch=arm64
npm_config_target_arch=arm64
npm_config_platform=darwin
target_arch=arm64
target_libc=unknown

# 编译配置
build_from_source=false
npm_config_build_from_source=false
grpc_build_from_source=false
node_pre_gyp_install_force=false

# C++ 配置
CXXFLAGS="-std=c++17"
npm_config_CXXFLAGS="-std=c++17"
CFLAGS="-std=c++17"
npm_config_CFLAGS="-std=c++17"

# Node.js 配置
NODE_OPTIONS=--max_old_space_size=4096
NODE_GYP_FORCE_PYTHON=/opt/homebrew/bin/python3

# 依赖配置
legacy-peer-deps=true
strict-peer-dependencies=false
auto-install-peers=true

# 环境配置
NODE_ENV=development
loglevel=info

# 包管理器设置
prefer-npm=true
save-exact=true

# 日志设置
loglevel=info

# 缓存配置
prefer-offline=false
prefer-online=true

# Git 配置
git-checks=true

# 编译配置
msbuild_path=C:\Program Files\Microsoft Visual Studio\2022\Community\MSBuild\Current\Bin\MSBuild.exe
msbuild_arch=x64
msbuild_configuration=Release

# Visual Studio 2022 工具链配置
GYP_MSVS_VERSION=2022
windows_build_tools_path=C:\Program Files (x86)\Microsoft Visual Studio\2022\BuildTools
vs_path=C:\Program Files\Microsoft Visual Studio\2022\Community
vs_toolchain=14.37
vs_buildtools_version=17.7

# jq 配置
JQ_BINARY_PATH=node_modules/node-jq/bin/jq.exe

# grpc 配置
grpc_binary_host_mirror=https://npmmirror.com/mirrors/grpc/
grpc_binary_host_mirror_arm64=https://npmmirror.com/mirrors/grpc/
grpc_prebuilds=true
grpc_prebuilds_arm64=true


